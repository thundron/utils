{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "claude-native-app-tauri",
  "version": "0.1.0",
  "identifier": "com.claude-native-app-tauri.app",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "claude-native-app-tauri",
        "width": 800,
        "height": 600,
        "url": "https://claude.ai/"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://claude.ai; style-src 'self' 'unsafe-inline' https://claude.ai; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://claude.ai; img-src 'self' data: https://claude.ai; connect-src 'self' https://claude.ai"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
